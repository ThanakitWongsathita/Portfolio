<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrewFragment">

    <View
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:alpha="1.0"
        android:background="#333436" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="3dp"
        android:text="บุคลากร"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/textTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:text="บุคลากรทั้งหมด"
        android:layout_marginLeft="20dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCategoryAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บุคลากรทั้งหมด"
            android:textColor="@color/white"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textCategoryTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="อาจารย์ในภาควิชา"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textCategoryStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="เจ้าหน้าที่ในภาควิชา"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:textSize="13sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container_crew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">
    </FrameLayout>

</FrameLayout>